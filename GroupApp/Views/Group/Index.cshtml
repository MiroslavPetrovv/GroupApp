@model List<GroupDisplayViewModel>
@using GroupApp.ViewModels.Group



@{
    ViewData["Title"] = "HomePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/Index.css">
<section class="hero">
    <h1>The Community Platform Built<br>for Learning Programs</h1>
    <p>Transform your courses, training and coaching programs with community-based<br>learning. Drive deeper engagement, higher completion rates, and lasting results.</p>
    <div class="cta-section">
        <button class="cta-button">Start for free</button>
        <p class="no-credit">No credit card required</p>
    </div>
</section>
<section id="features" class="features">
    <h2>Features Designed for Collaboration</h2>
    <p class="features-subtitle">Everything you need to connect, share, and work together effectively.</p>

    <div class="features-grid">
        <div class="feature-card">
            <div class="feature-icon team"></div>
            <h3>Team Collaboration</h3>
            <p>Work together in real-time with your team members on projects and tasks.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon message"></div>
            <h3>Group Messaging</h3>
            <p>Communicate efficiently with dedicated chat rooms for every topic.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon calendar"></div>
            <h3>Event Planning</h3>
            <p>Schedule and organize events, meetings, and activities for your group.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon document"></div>
            <h3>Document Sharing</h3>
            <p>Share and collaborate on documents with version control and comments.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon share"></div>
            <h3>Content Sharing</h3>
            <p>Share photos, videos, and other media with your group members.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon privacy"></div>
            <h3>Privacy Controls</h3>
            <p>Control who can see your content with customizable privacy settings.</p>
        </div>
    </div>
</section>

<section class="discover">
    <h2>Discover Popular Groups</h2>
    <p class="discover-subtitle">Join existing communities or create your own group to connect with like-minded people.</p>

    <div class="groups-grid">
        @foreach (var group in Model)
        {
            <div class="group-card">
                <div class="group-image" style="background-image: url('data:image/*;base64, @group.Banner')"></div>
                <div class="group-content">
                    <h3>@group.Title</h3>
                    <p class="members">👥 @group.GroupMemberCount</p>
                    <p class="description">@group.Description</p>
                    <div class="group-actions">
                        <button class="join-btn">Join Group</button>
                    </div>
                </div>
            </div>
        }
    </div>

    <button class="view-all">View All Groups</button>
</section>

<section class="testimonials">
    <h2>What People Are Saying</h2>
    <p class="testimonials-subtitle">Don't just take our word for it. Here's what our users have to say.</p>

    <div class="testimonials-grid">
        <div class="testimonial-card">
            <div class="quote">"</div>
            <p class="testimonial-text">GroupHub has transformed how our team collaborates. The interface is intuitive and the features are exactly what we needed.</p>
            <p class="testimonial-author">Sarah Johnson</p>
            <p class="testimonial-role">Marketing Director</p>
        </div>

        <div class="testimonial-card">
            <div class="quote">"</div>
            <p class="testimonial-text">I've tried many group platforms, but this one stands out for its simplicity and powerful features. It's helped our community grow exponentially.</p>
            <p class="testimonial-author">David Chen</p>
            <p class="testimonial-role">Community Manager</p>
        </div>

        <div class="testimonial-card">
            <div class="quote">"</div>
            <p class="testimonial-text">The event planning features are incredible. We've increased attendance at our meetups by 40% since we started using GroupHub.</p>
            <p class="testimonial-author">Michael Rodriguez</p>
            <p class="testimonial-role">Event Coordinator</p>
        </div>
    </div>
</section>